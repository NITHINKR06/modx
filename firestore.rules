rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper: is the caller an admin? ──────────────────────────────
    function isAdmin() {
      return request.auth != null
             && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ── Helper: allowed project fields ───────────────────────────────
    function validProjectFields() {
      return request.resource.data.keys().hasOnly([
        'title', 'shortDesc', 'detailedDesc', 'teamMembers', 'technologies',
        'images', 'githubLink', 'demoLink', 'ownerId', 'ownerName',
        'status', 'progress', 'createdAt'
      ]);
    }

    // ── Helper: allowed user profile fields ──────────────────────────
    function validUserFields() {
      return request.resource.data.keys().hasOnly([
        'uid', 'name', 'email', 'bio', 'role', 'createdAt'
      ]);
    }

    // ── Admins collection ────────────────────────────────────────────
    // Authenticated users can read their own doc (to detect admin status).
    // No client-side writes – manage this collection only from Firebase Console.
    match /admins/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }

    // ── Activity Log ──────────────────────────────────────────────────
    // Any authenticated user can create logs for themselves.
    // Only admins can read the activity log. No updates/deletes from client.
    // list is disabled — admins must use server-side SDK or query with limit.
    match /activities/{activityId} {
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow update, delete: if false;
    }

    // ── Projects ──────────────────────────────────────────────────────
    // Any authenticated user can read all projects (public explore page).
    // Only the document owner can create / update / delete their projects.
    // Admins can read / write / delete ANY project.
    match /projects/{projectId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null
                    && request.resource.data.ownerId == request.auth.uid
                    && validProjectFields();

      allow update: if request.auth != null
                    && (resource.data.ownerId == request.auth.uid || isAdmin())
                    && validProjectFields();

      allow delete: if request.auth != null
                    && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    // ── User Profiles ─────────────────────────────────────────────────
    // Each user can only read and write their own profile document.
    // Admins can read and write ANY user profile.
    // Non-admins are blocked from changing their own 'role' field.
    match /users/{userId} {
      allow read: if request.auth != null
                  && (request.auth.uid == userId || isAdmin());

      allow write: if request.auth != null
                   && (request.auth.uid == userId || isAdmin())
                   && validUserFields()
                   // Non-admins cannot escalate their own role
                   && (isAdmin()
                       || !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));

      // Allow initial profile creation (no existing resource to diff against)
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && validUserFields();
    }
  }
}
